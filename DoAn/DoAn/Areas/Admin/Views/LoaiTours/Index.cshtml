@model IEnumerable<DoAn.Models.LoaiTour>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Loại Tour Du Lịch</h2>

<p>
    @Html.ActionLink("Thêm Loại Tour", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLoaiTour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoaiTour)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID_LoaiTour }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID_LoaiTour })
        </td>
    </tr>
}

</table>
