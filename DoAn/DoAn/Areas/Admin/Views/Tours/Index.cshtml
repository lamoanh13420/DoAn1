@model PagedList.IPagedList<DoAn.Models.Tour>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Tour Du Lịch</h2>

<table class="table">
    <tr>
        <th>
            Tên Tour
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Khách Sạn
        </th>
        <th>
            Phương Tiện
        </th>
        <th>
            Chi Phí
        </th>
        <th>
            Ngày Khởi Hành
        </th>
        <th>
            Ngày Kết Thúc
        </th>
        <th>
            Ngày Tập Trung
        </th>
        <th>
            Địa Điểm Tập Trung
        </th>
        <th>
            Loại Tour
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTour)
            </td>
            <td>
                <img src="@Url.Content(item.HinhAnh)" style="width:70px; height:70px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachSan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhuongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKhoiHanh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKetThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTapTrung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiTapTrung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiTour.TenLoaiTour)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_Tour }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID_Tour }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_Tour })
            </td>
        </tr>
    }

</table>

<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="Menutrang">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
<style>
    .Menutrang li {
        display: inline
    }
</style>
