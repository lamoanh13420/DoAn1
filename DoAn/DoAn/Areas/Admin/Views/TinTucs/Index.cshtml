@model PagedList.IPagedList<DoAn.Models.TinTuc>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Tin Tức</h2>

<table class="table">
    <tr>
        <th>
            Tên Tin Tức
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Ngày Cập Nhật
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTT)
            </td>
            <td>
                <img src="@Url.Content(item.ImageTT)" style="width:150px; height:150px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhapTT)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_TT }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_TT }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_TT })
            </td>
        </tr>
    }

</table>

<!-- Thêm mã phân trang -->
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="Menutrang" >@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
<style>
    .Menutrang li {
        display:inline
    }
</style>
